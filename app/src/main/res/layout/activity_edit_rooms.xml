<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentRelative"
    android:background="@color/white"
    tools:context="com.example.Adapter.EditRoomsActivity">


    <LinearLayout
        android:id="@+id/totalAmountLinear"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/booknow">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                android:text="Total Amount:  â‚¹"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                android:text="1050"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/totalAmountLinear"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/customtextfeild"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingTop="15dp"

        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rooms:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotalRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Guests:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotalGuests"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:text="Guests"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/id_guestsSubtract"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:src="@drawable/minus" />

            <EditText
                android:id="@+id/id_guestsInput"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.5"
                android:background="@color/gray_scale"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="2" />

            <ImageView
                android:id="@+id/id_guestsAdd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:src="@drawable/add" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:text="Rooms"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/id_roomsSubtract"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:src="@drawable/minus" />

            <EditText
                android:id="@+id/id_roomsInput"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.5"
                android:background="@color/gray_scale"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="2" />

            <ImageView
                android:id="@+id/id_roomsAdd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:src="@drawable/add" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="3dp"

        android:background="#0DF316">

        <TextView
            android:id="@+id/btnApplyEditRooms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"

            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


    </RelativeLayout>












