<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerbackground"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    >

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="30dp"
        app:cardCornerRadius="15dp">
    <ImageView
        android:id="@+id/hotelListfirstimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/lala"
        android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/addWishList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/_265sdp"
            android:layout_marginTop="10dp"
            android:src="@drawable/add_bookmark_icon"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/removeWishList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/_240sdp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            />


        <TextView
            android:id="@+id/hotelListrating"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="4.3"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:background="#7CFC00"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/hotelListhotelname"
        android:layout_width="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:text="Hotel Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/hotelListhoteladdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:textColor="#EBA83A"/>

    <TextView
        android:id="@+id/hotelListhotelrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rent"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/white"/>



</LinearLayout>